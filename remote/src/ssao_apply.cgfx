#include "output.cg"

uniform float4 uColor:FBColor;
uniform float uSSAO:SSAO;
//--------------------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------------------
//@
float4 occlude() outputs(COLOR)
{
    return float4(uColor.rgb*(1.0-uSSAO),1.0);
}
//@
//--------------------------------------------------------------------------------------------------
//--------------------------------------------------------------------------------------------------
technique Main
{
    pass apply_ssao <
        string output = "FBColor";>
    {
        FragmentProgram = compile fp40 occlude();
    }
}
