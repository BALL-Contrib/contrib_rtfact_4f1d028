# Specifies an environment image texture
environmentTexture
type image
file textures/envmap.tga
upDimension 1

# Specifies a directional light source
light
type directional
direction -0.25 -1 -0.3
intensity 0.7 0.7 0.7

# Specifies a point light source (OpenGL-style attenuation)
light
type point
position 0 0 0
intensity 0.7 0.7 0.7
attenuation 0 0 0
